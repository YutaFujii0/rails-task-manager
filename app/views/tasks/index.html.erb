<h1>My Tasks</h1>

<%= link_to "Create a new task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <% mark = task.completed ? "[X]" : "[ ]" %>
    <li>
      <%= "#{mark} - "%>
      <%= link_to "#{task.title}", task_path(task.id)%>
      <%= link_to "Delete", task_path(task.id), method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
